import java.util.ArrayList;
import java.util.Collections;

public class GameHandler {
    public ArrayList<Tile> bag, lid;
    public int controlTurn;
    public factoryFloor factoryF;
    public factory factory;

    public GameHandler (){
        controlTurn = 0;
        factoryF = new factoryFloor ();
        factory = new factory();
        bag = new ArrayList<Tile>();
        lid = new ArrayList<Tile>();
        int inc = 1;
        for(int i = 1; i <= 100; i++) {
            bag.add(new Tile(inc));
            if (i%20 == 0)
                inc++;
        }
        Collections.shuffle(bag);
    }
    public void play (){
        switch (controlTurn){
            //offer selection
            case 0:{
                enableFactory();
                controlTurn = 1;
                // if factory is selected

                //if factory floor is selected
                break;
            }
            //placement selection
            case 1:{
                enablePlacement();
                controlTurn = 2;
                break;
            }
            //result
            case 2:{
                controlTurn = 0;
                break;
            }
        }
    }
    //enables factory and disables placement selection
    public void enableFactory (){

    }
    public void enablePlacement (){

    }
    public void Animate (ArrayList <Tile> tiles, int newX, int newY){

    }
    public void shuffle (){

    }

}
